<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.java.dev01.exercise01.pojos.Persona" table="empleado">
        <id name="id" type="int"> <!-- column="id" si se va usar el mismo nombre en name no es necesario poner-->
            <generator class="increment"/>
        </id>
        <property name="nombre" column="cnombre" type="string"/> <!-- column = es el nombre del campo en la tabla -->
    </class>
</hibernate-mapping>